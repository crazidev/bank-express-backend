{
  "name": "bank-express-backend",
  "version": "0.0.0",
  "private": true,
  "main": "index.ts",
  "description": "",
  "scripts": {
    "start": "nodemon ./api/index.js",
    "start-dev": "cross-env NODE_ENV=development nodemon index.ts",
    "start-prod": "cross-env NODE_ENV=production nodemon index.ts",
    "serve": "nodemon index.ts",
    "db:up": "echo creating && npm run db:create && echo created && npm run db:migrate && echo migrated",
    "db:reset": "npm run db:drop && npm run db:up",
    "db:create": "sequelize db:create",
    "db:drop": "[[ $NODE_ENV == production ]] && exit 1 || sequelize db:drop",
    "db:migrate": "sequelize db:migrate",
    "db:rollback": "sequelize db:migrate:undo",
    "db:rollback:all": "sequelize db:migrate:undo:all",
    "build": "tsc",
    "install": "npm install -g tsc-watch typescript nodemon sequelize-cli cross-env",
    "dev": "tsc-watch --onSuccess \"node ./api/index.js\""
  },
  "dependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.1",
    "@types/ws": "^8.5.5",
    "axios": "^1.5.1",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cloudinary": "^1.41.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "crypto-convert": "^2.1.6",
    "debug": "~2.6.9",
    "dotenv": "^16.3.1",
    "express": "~4.16.1",
    "express-fileupload": "^1.4.0",
    "helmet": "^7.0.0",
    "http-errors": "~1.6.3",
    "i": "^0.3.7",
    "javascript-time-ago": "^2.5.9",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^2.1.35",
    "moment": "^2.29.4",
    "morgan": "~1.9.1",
    "mysql2": "^2.3.3",
    "nodemailer": "^6.9.4",
    "qrcode": "^1.5.3",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1",
    "yup": "^1.2.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.14",
