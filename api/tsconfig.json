{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2021"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": ".",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "*": ["node_modules/*", "types/*"]
    }
  },
  "include": ["./routes/**/*"]
}
